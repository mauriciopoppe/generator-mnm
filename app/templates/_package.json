{
  "name": "<%= slugname %>",
  "version": "0.0.0",
  "description": "<%= props.description %>",<% if (props.homepage) { %>
  "homepage": "<%= props.homepage %>",<%}%>
  "bugs": "<%= props.repoUrl %>/issues",
  "author": "<%= props.authorName %> <<%= props.authorEmail %>>",
  "license": "<%= props.license %>",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "<%= props.repoUrl %>"
  },<% if (config.cli) { %>
  "bin": "bin/<%= slugname %>",<% } %>
  "keywords": [
    "<%= slugname %>"<% for (var i = 0; i < props.keywords.length; i += 1) { %>,
    "<%= props.keywords[i] %>"<% } %>
  ],
  "scripts": {
    "preversion": "npm run babel && npm run lint",

    "test": "babel-tape-runner test/ | tap-spec", <% if (config.codeCoverage) { %>
    "test:cov": "babel-node node_modules/.bin/isparta cover test/",<% } %>
    "test:watch": "watch 'npm test' test/ src/",

    "babel": "babel --out-dir lib/ src/",
    "lint": "standard",

    "watch": "npm run test:watch",

    "start": "npm run watch"
  },
  "standard": {
    "ignore": [
      "/lib"
    ]
  }
}
